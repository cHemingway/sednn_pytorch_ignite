{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "mixture_features",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/utils/prepare_data.py",
            "args": [
                "calculate_mixture_features",
                "--workspace=workspace",
                "--speech_dir=metadata/train_speech",
                "--noise_dir=metadata/train_noise",
                "--data_type=train",
                "--snr=0"
            ],
            "redirectOutput": false,
            "console": "integratedTerminal"
        },
        {
            "name": "pack_features",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/prepare_data.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "pack_features",
                "--workspace=workspace_full",
                "--data_type=test",
                "--snr=0",
                "--n_concat=7",
                "--n_hop=3"
            ],
            "redirectOutput": false,
            "console": "integratedTerminal"
        },
        {
            "name": "main_ignite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/pytorch/main_ignite.py",
            "args": [
                "LSTM",
                "train",
                "--workspace=workspace_full",
                "--tr_snr=0",
                "--te_snr=0"
            ],
            // "args" : [
            //     "DNN",
            //     "inference",
            //     "--workspace=workspace",
            //     "--enhanced_dir=workspace/enh_wavs",
            //     "--tr_snr=0",
            //     "--te_snr=0",
            //     "--n_concat=7"
            // ],
            "justMyCode": false,
            "redirectOutput": false,
            "console": "integratedTerminal"
        },
        {
            "name": "mixture_csv",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/utils/prepare_data.py",
            "cwd": "${workspaceRoot}",
            "args": [
                "create_mixture_csv",
                "--workspace=workspace",
                "--speech_dir=metadata/train_speech",
                "--noise_dir=metadata/train_noise",
                "--data_type=train",
                "--magnification=2"
            ],
            "redirectOutput": false,
            "console": "integratedTerminal"
        },
        {
            "name": "evaluate_pesq",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/evaluate.py",
            "args": [
                "calculate_pesq",
                "--workspace=workspace",
                "--speech_dir=metadata/train_speech",
                "--te_snr=0",
            ],
            "redirectOutput": false,
            "console": "integratedTerminal"
        },
        {
            "name": "evaluator",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/evaluator.py",
            "args": [
                "--clean_dir=mini_data/test_speech",
                "--dirty_dir=workspace/enh_wavs/test/0db",
                "--output_file=metrics_test.csv"
            ],
            "redirectOutput": false,
            "console": "integratedTerminal"
        },
        {
            "name": "show_stats",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/show_stats.py",
            "args": [
                "--csv_file=results/metadata/segan_bss_stoi.csv",
                "--pesq_file=results/metadata/segan_pesq_results.txt",
            ],
            "redirectOutput": false,
            "console": "integratedTerminal"
        }
    ]
}